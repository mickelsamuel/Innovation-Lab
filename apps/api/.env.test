# Test Environment Variables
NODE_ENV=test
PORT=4001

# Database
DATABASE_URL="postgresql://test:test@localhost:5432/innovationlab_test?schema=public"

# Redis
REDIS_URL="redis://localhost:6379/1"

# JWT
JWT_SECRET="test-jwt-secret-key-for-testing-only-change-in-production"
JWT_REFRESH_SECRET="test-jwt-refresh-secret-key-for-testing-only-change-in-production"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# API Configuration
API_PREFIX="v1"
CORS_ORIGIN="http://localhost:3000"

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,application/zip"

# Storage (use local for tests)
STORAGE_TYPE="local"
STORAGE_LOCAL_PATH="./uploads"

# Email (mock for tests)
EMAIL_FROM="noreply@test.com"
EMAIL_FROM_NAME="Innovation Lab Test"
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""

# Rate Limiting (high limits for E2E tests)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=1000

# Disable external services for testing
ENABLE_BACKGROUND_JOBS=false
ENABLE_REDIS_CACHE=false
