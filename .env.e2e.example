# ==================================
# E2E Testing Environment Variables
# ==================================
# Copy this file to .env.e2e for local E2E testing
# In CI, these values are set directly in .github/workflows/ci.yml

# ==================================
# DATABASE
# ==================================
DATABASE_URL="postgresql://test:test@localhost:5432/innovationlab_e2e"

# ==================================
# REDIS
# ==================================
REDIS_URL="redis://localhost:6379"

# ==================================
# AUTH
# ==================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="test-nextauth-secret-for-e2e-testing-only-min-32-chars"

# JWT for API
JWT_SECRET="test-jwt-secret-for-e2e-testing-only-min-32-chars"
JWT_REFRESH_SECRET="test-jwt-refresh-secret-for-e2e-testing-only-min-32-chars"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# ==================================
# EMAIL
# ==================================
EMAIL_FROM="noreply@test.com"
EMAIL_FROM_NAME="Innovation Lab E2E Test"
SMTP_HOST="localhost"
SMTP_PORT="1025"

# ==================================
# API SERVICE
# ==================================
API_PORT="4001"
API_URL="http://localhost:4001"
NODE_ENV="test"
LOG_LEVEL="error"

# Rate limiting (relaxed for E2E tests)
RATE_LIMIT_TTL="60"
RATE_LIMIT_MAX="1000"

# ==================================
# WEB APP
# ==================================
NEXT_PUBLIC_API_URL="http://localhost:4001/v1"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Innovation Lab"

# ==================================
# STORAGE
# ==================================
STORAGE_TYPE="local"
STORAGE_LOCAL_PATH="./uploads"

# ==================================
# SECURITY
# ==================================
CSRF_SECRET="test-csrf-secret-for-e2e-testing-only"
ENCRYPTION_KEY="test-encryption-key-32-bytes!!"

# ==================================
# FEATURE FLAGS
# ==================================
FEATURE_SSO_ENABLED="false"
FEATURE_2FA_ENABLED="false"
FEATURE_GAMIFICATION_ENABLED="true"
