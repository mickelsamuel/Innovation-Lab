# ==================================
# DATABASE
# ==================================
DATABASE_URL="postgresql://innovationlab:password@localhost:5432/innovationlab?schema=public"

# ==================================
# REDIS
# ==================================
REDIS_URL="redis://localhost:6379"

# ==================================
# S3 / OBJECT STORAGE
# ==================================
# AWS S3 in production, MinIO locally
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_REGION="us-east-1"
S3_BUCKET_NAME="innovation-lab"
S3_PUBLIC_URL="http://localhost:9000/innovation-lab"

# ==================================
# AUTH
# ==================================
# Auth.js / NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="CHANGE_THIS_TO_SECURE_RANDOM_STRING_MIN_32_CHARS"

# JWT for API
JWT_SECRET="CHANGE_THIS_TO_SECURE_RANDOM_STRING_MIN_32_CHARS"
JWT_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Microsoft Entra ID (Azure AD) SSO
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_TENANT_ID=""

# ==================================
# EMAIL
# ==================================
# For local dev, use Mailhog (http://localhost:8025)
EMAIL_FROM="Innovation Lab <noreply@innovationlab.nbc.com>"
EMAIL_HOST="localhost"
EMAIL_PORT="1025"
EMAIL_SECURE="false"
# For production with AWS SES or SendGrid:
# EMAIL_HOST="email-smtp.us-east-1.amazonaws.com"
# EMAIL_USER=""
# EMAIL_PASSWORD=""

# ==================================
# API SERVICE
# ==================================
API_PORT="4000"
API_URL="http://localhost:4000"
NODE_ENV="development"
LOG_LEVEL="info"

# Rate limiting
RATE_LIMIT_TTL="60"
RATE_LIMIT_MAX="100"

# ==================================
# WEB APP
# ==================================
NEXT_PUBLIC_API_URL="http://localhost:4000/v1"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Innovation Lab"

# ==================================
# OBSERVABILITY
# ==================================
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# ==================================
# FEATURE FLAGS
# ==================================
FEATURE_SSO_ENABLED="true"
FEATURE_2FA_ENABLED="true"
FEATURE_GAMIFICATION_ENABLED="true"

# ==================================
# SECURITY
# ==================================
CSRF_SECRET="CHANGE_THIS_TO_SECURE_RANDOM_STRING"
ENCRYPTION_KEY="CHANGE_THIS_TO_SECURE_RANDOM_STRING_32_BYTES"

# ==================================
# AWS (for production deployment)
# ==================================
AWS_REGION="us-east-1"
AWS_ACCOUNT_ID=""

# ==================================
# CONTENT SECURITY
# ==================================
MAX_UPLOAD_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="pdf,doc,docx,ppt,pptx,zip,png,jpg,jpeg,gif,mp4,mov"
